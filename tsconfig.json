{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // ðŸ”§ REQUIRED for decorators to work properly
    "experimentalDecorators": true,
    "useDefineForClassFields": false
  },
  "include": ["src"]
}
